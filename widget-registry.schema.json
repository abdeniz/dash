{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["widgets"],
  "properties": {
    "widgets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "label", "category", "layout", "config"],
        "properties": {
          "type": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "layout": {
            "type": "object",
            "required": ["minW", "minH", "maxW", "maxH"],
            "properties": {
              "minW": { "type": "number" },
              "minH": { "type": "number" },
              "maxW": { "type": "number" },
              "maxH": { "type": "number" }
            },
            "additionalProperties": false
          },
          "config": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "required": ["type", "required", "label"],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["string", "number", "boolean"]
                },
                "required": {
                  "type": "boolean"
                },
                "label": {
                  "type": "string"
                },
                "secret": {
                  "type": "boolean",
                  "default": false
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
